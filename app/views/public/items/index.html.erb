<h1>Public::Items#index</h1>
<p>Find me in app/views/public/items/index.html.erb</p>
<%= @items.each do |item| %>
    
    <h1>商品一覧</h1>
    
    <%= link_to item_path(item.id) do %>   
        <%= item.name %>
    <% end %>
    
    <% if item.image.attached? %>
	    <%= image_tag item.image, size:"200x200" %>
    <% else %>
    	<%= image_tag 'no_image', size:"200x200" %>
    <% end %>
    
    <%= item.explanation %>
    
    <p>税込単価</p>
    <%= item.price %>
    
<% end %>