<%= stylesheet_link_tag 'public/orders', :media => "all" %>

<h1 class="title">注文履歴一覧</h1>

<table>
    <thead>
        <tr>
            <th>ご注文日</th>
            <th>お届け先</th>
            <th>請求金額</th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        <% @order.each do |order| %>  
        <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td style="text-align: left;"><%= order.address %></td>
            <td>￥<%= order.total_price %>-</td>
            <td class="show-link"><%= link_to '詳細を見る',  order_path(order.id) %></td>
        </tr>
        <% end %>
    </tbody>
</table>

