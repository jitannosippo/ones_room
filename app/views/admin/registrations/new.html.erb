<%= stylesheet_link_tag 'application', :media => "all" %>

<h1 class="sign-in">販売者登録</h1>

<div class="info">
    <div class="left">
        <p>名前</p>
        <p>メール</p>
        <p>パスワード</p>
        <p>確認用パスワード</p>
    </div>
    
    <div class="right">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "admin/shared/error_messages", resource: resource %>
        <p><%= f.text_field :name, autofocus: true, autocomplete: "name", class:'form' %></p>
        <p><%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form' %></p>
        <p><%= f.password_field :password, autocomplete: "new-password", class:'form' %></p>
        <p><%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form' %></p>
        
        <%= f.submit "新規登録", class:'btn' %>
      <% end %>
      <div class="link">
        <%= link_to "ユーザログイン画面へ", new_customer_session_path %><br><br>
        <%= link_to "販売者ログイン画面へ", new_admin_session_path %>
      </div>
      
    </div>

</div>
